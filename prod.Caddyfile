(common) {
  header {
    -Server
  }

  encode zstd gzip
}

api.astro.kerolloz.dev {
  import common
  reverse_proxy api:3000
}

www.astro.kerolloz.dev, astro.kerolloz.dev {
  import common
  root * /srv/frontend
  try_files {path} {file} /index.html
  file_server
}

http://*.page.kerolloz.dev {
  import common
  root * /srv/static-hosting/{labels.2}
  try_files {path} {file} /index.html
  file_server
}