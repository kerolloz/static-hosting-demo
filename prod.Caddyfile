(common) {
  header {
    -Server
  }

  encode zstd gzip
}

api.kloud.kerolloz.dev {
  import common
  reverse_proxy api:3000
}

www.kloud.kerolloz.dev, kloud.kerolloz.dev {
  import common
  root * /srv/frontend
  try_files {path} {file} /index.html
  file_server
}

*.kloud.kerolloz.dev {
  import common
  root * /srv/static-hosting/{labels.2}
  try_files {path} {file} /index.html
  file_server
}